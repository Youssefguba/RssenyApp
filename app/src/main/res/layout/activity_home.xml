<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".UI.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/boyImage"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
             />

        <TextView
            android:id="@+id/nameOfUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="#fff"
            android:fontFamily="@font/stcregular"
            android:textStyle="bold"

            />

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/faculties_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:nb_text="إعرف أكتر"
            app:nb_textSize="20dp"
            app:nb_textStyle="bold"
            app:nb_borderWidth="2dp"
            app:nb_borderColor="#fff"
            app:nb_backgroundColor="#fff"
            app:nb_focusColor="#2A5F81"
            app:nb_textColor="#2481B4"
            app:nb_radius="17dp"/>


        <com.ornach.nobobutton.NoboButton
            android:id="@+id/consultation_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:nb_text="اسأل واستشير"
            app:nb_textSize="20dp"
            app:nb_textStyle="bold"
            app:nb_borderWidth="2dp"
            app:nb_borderColor="#fff"
            app:nb_backgroundColor="#fff"
            app:nb_focusColor="#2A5F81"
            app:nb_textColor="#2481B4"
            app:nb_radius="17dp"/>

        </LinearLayout>

</RelativeLayout>