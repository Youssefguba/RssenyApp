<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layoutDirection="rtl"
    android:weightSum="5"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="7dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/mentorPhoto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameOfMentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacenvanilla"
            android:text="يوسف"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/descriptionOfMentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/israrsyria"
            android:text="Youssef"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layoutDirection="rtl"
            android:gravity="end"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layoutDirection="rtl">

        <TextView
            android:id="@+id/priceOfMentor"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:fontFamily="@font/israrsyria"
            android:text="Youssef"
            android:gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/phoneNumberOfMentor"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacenvanilla"
                android:text="012345678910"
                android:textDirection="ltr"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>